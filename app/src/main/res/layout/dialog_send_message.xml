<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="fill_parent" >

     <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edit_sujet_message_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/sujet_conversation" 
            bootstrapbutton:be_roundedCorners="false"
            android:gravity="center"
            bootstrapbutton:be_state="primary"
	/>
     
     <com.beardedhen.androidbootstrap.BootstrapEditText
            android:id="@+id/edit_message_dialog"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:maxLength="2000"
            android:hint="@string/message_conversation" 
            bootstrapbutton:be_roundedCorners="false"
            android:gravity="center"
            bootstrapbutton:be_state="primary"
	/>
     
     <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/btn_send_message_dialog"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:textSize="20sp"
	    android:text="@string/dialog_envoyer_finale"
	    bootstrapbutton:bb_icon_left="fa-envelope"
	    bootstrapbutton:bb_type="primary"
	/>

     <ProgressBar
         android:id="@+id/progressBar_send_message_dialog"
         style="?android:attr/progressBarStyleLarge"
         android:visibility="gone"
         android:layout_gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />
 
</LinearLayout>